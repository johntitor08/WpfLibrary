<Window x:Class="WpfLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mini Library (WPF + EF Core)"
        Height="500"
        Width="800">

        <Grid Margin="10">
                <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="BooksGrid"
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="BooksGrid_SelectionChanged">
                        <DataGrid.Columns>
                                <DataGridTextColumn Header="ID"
                                                    Binding="{Binding Id}"
                                                    Width="40"/>
                                <DataGridTextColumn Header="Başlık"
                                                    Binding="{Binding Title}"
                                                    Width="150"/>
                                <DataGridTextColumn Header="Yazar"
                                                    Binding="{Binding Author}"
                                                    Width="120"/>
                                <DataGridTextColumn Header="Kategori"
                                                    Binding="{Binding Category}"
                                                    Width="100"/>
                                <DataGridCheckBoxColumn Header="Okundu"
                                                        Binding="{Binding IsRead}"
                                                        Width="70"/>
                                <DataGridCheckBoxColumn Header="Favori"
                                                        Binding="{Binding IsFavorite}"
                                                        Width="70"/>
                                <DataGridTextColumn Header="Tarih"
                                                    Binding="{Binding CreatedAt}"
                                                    Width="150"/>
                        </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="1"
                            Orientation="Vertical"
                            Margin="5">
                        <WrapPanel>
                                <StackPanel Margin="5">
                                        <TextBlock>Başlık</TextBlock>
                                        <TextBox x:Name="TxtTitle"
                                                 Width="200"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                        <TextBlock>Yazar</TextBlock>
                                        <TextBox x:Name="TxtAuthor"
                                                 Width="200"/>
                                </StackPanel>
                                <StackPanel Margin="5">
                                        <TextBlock>Kategori</TextBlock>
                                        <TextBox x:Name="TxtCategory"
                                                 Width="150"/>
                                </StackPanel>
                                <StackPanel Margin="15,5,5,5"
                                            Orientation="Horizontal">
                                        <CheckBox x:Name="ChkRead"
                                                  Content="Okundu"
                                                  Margin="10,0"/>
                                        <CheckBox x:Name="ChkFavorite"
                                                  Content="Favori"/>
                                </StackPanel>
                        </WrapPanel>

                        <WrapPanel HorizontalAlignment="Center"
                                   Margin="5">
                                <Button Content="Ekle"
                                        Width="100"
                                        Margin="5"
                                        Click="BtnAdd_Click"/>
                                <Button Content="Güncelle"
                                        Width="100"
                                        Margin="5"
                                        Click="BtnUpdate_Click"/>
                                <Button Content="Sil"
                                        Width="100"
                                        Margin="5"
                                        Click="BtnDelete_Click"/>
                                <Button Content="Temizle"
                                        Width="100"
                                        Margin="5"
                                        Click="BtnClear_Click"/>
                        </WrapPanel>
                </StackPanel>
        </Grid>
</Window>
